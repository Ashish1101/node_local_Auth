<link rel="stylesheet" href="/css/form.css" >
<div class="container">
  <div class="col-md-6 mx-auto text-center">
     <div class="header-title">
        <h1 class="wv-heading--title">
          Login To Secret Friends
        </h1>
     </div>
  </div>
  <div class="row">
     <div class="col-md-4 mx-auto">
        <div class="myform form ">
           <%- include('./partials/messages') %>
           <form action="/user/login" method="POST">
              <div class="form-group">
                 <input type="email" name="email"  class="form-control my-input" id="name" placeholder="Email">
              </div>
              <div class="form-group">
                 <input type="password" name="password"  class="form-control my-input" id="email" placeholder="password">
              </div>
          
              <div class="text-center ">
                 <button type="submit" class=" btn btn-block send-button tx-tfm">Login</button>
              </div>
              
              <div class="form-group my-2">
                 <a class="btn btn-block g-button" href="/user/register">
                   Register
                 </a>
              </div>
              
           </form>
        </div>
     </div>
  </div>
</div>
